<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            style="@style/Toolbar">

            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:tint="@color/textColorContrast"
                app:srcCompat="@drawable/ic_arrow_back"
                style="@style/closeButtonStyle"/>

            <android.support.v4.widget.Space
                android:layout_width="@dimen/margin_primary"
                android:layout_height="@dimen/space_unused_dimension" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Toolbar.TitleText"
                android:text="@string/backup_phrase"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="@dimen/margin_primary"
            android:textSize="@dimen/text_size_instruction"
            android:textColor="@color/textColorPrimary"
            android:text="@string/let_s_secure_your_account"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_default"
            android:textColor="@color/textColorSecondary"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="@dimen/margin_primary"
            android:layout_marginRight="@dimen/margin_primary"
            android:text="@string/backup_phrase_info_message"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_unused_dimension"
            android:layout_height="22dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            style="@style/contentSubTitleStyle"
            android:text="@string/confirm"/>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_unused_dimension"
            android:layout_height="6dp" />

        <LinearLayout
            android:id="@+id/understand_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_primary"
            android:layout_marginRight="@dimen/margin_primary">

            <CheckBox
                android:id="@+id/radio_button_understand"
                android:layout_width="@dimen/checkbox_size"
                android:layout_height="@dimen/checkbox_size"
                android:layout_marginLeft="@dimen/margin_three_quarters"
                android:layout_marginRight="@dimen/margin_three_quarters"
                android:button="@drawable/checkbox"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/backup_phrase_understand_message" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="@dimen/space_unused_dimension"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/margin_primary"
            android:layout_marginRight="@dimen/margin_primary"
            android:layout_marginBottom="@dimen/margin_primary"
            android:background="@drawable/background_with_radius_disabled"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:text="@string/continue_"/>

    </LinearLayout>

</layout>